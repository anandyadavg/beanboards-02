<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.edexworldpc.beanboards.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbarAlwaysDrawHorizontalTrack="true"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="269dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:paddingTop="20dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/beanboards" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp">

                <ImageView
                    android:id="@+id/img_retro"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_gravity="left"
                    android:layout_marginRight="10dp"
                    android:tooltipText="Retro"
                    app:srcCompat="@drawable/retrotimer"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="34dp" />

                <ImageView
                    android:id="@+id/img_story_teller"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    app:srcCompat="@drawable/storyteller"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="34dp" />

                <ImageView
                    android:id="@+id/img_sprint_runner"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_gravity="left"
                    android:layout_marginRight="50dp"
                    android:tooltipText="Retro"
                    app:srcCompat="@drawable/sprintrunner"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="34dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp">

                <ImageView
                    android:id="@+id/img_kanban_winner"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_gravity="left"
                    android:layout_marginRight="10dp"
                    android:tooltipText="Retro"
                    app:srcCompat="@drawable/kanbanwinner"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="34dp" />

                <ImageView
                    android:id="@+id/img_product_owner"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    app:srcCompat="@drawable/productowner"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="34dp" />

                <ImageView
                    android:id="@+id/img_score_keeper"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_gravity="left"
                    android:layout_marginRight="50dp"
                    android:tooltipText="Retro"
                    app:srcCompat="@drawable/scorekeeper"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="34dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp">

                <ImageView
                    android:id="@+id/img_notifications"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_gravity="left"
                    android:layout_marginRight="10dp"
                    android:tooltipText="Retro"
                    app:srcCompat="@drawable/alertpager"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="34dp" />

                <ImageView
                    android:id="@+id/img_time_tracker"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    app:srcCompat="@drawable/timetracker"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="34dp" />

                <ImageView
                    android:id="@+id/img_team"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_gravity="left"
                    android:layout_marginRight="50dp"
                    android:tooltipText="Retro"
                    app:srcCompat="@drawable/my_team"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="34dp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
